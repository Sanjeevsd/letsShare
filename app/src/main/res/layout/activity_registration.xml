<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="379dp"
        android:layout_height="75dp"
        android:text="SignUp"
        android:textAlignment="center"
        android:textColor="#D9CCCA"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="#BB7CAC"
        android:id="@+id/name_reg"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="#D9CCCA"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:background="#BB7CAC"
        android:id="@+id/number_reg"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#D9CCCA"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/name_reg"
        app:layout_constraintStart_toStartOf="@+id/name_reg"
        app:layout_constraintTop_toBottomOf="@+id/name_reg" />

    <EditText
        android:background="#BB7CAC"
        android:id="@+id/email_reg"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Email address"
        android:inputType="textEmailAddress"
        android:textColor="#D9CCCA"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/number_reg"
        app:layout_constraintStart_toStartOf="@+id/number_reg"
        app:layout_constraintTop_toBottomOf="@+id/number_reg" />

    <EditText
        android:background="#BB7CAC"
        android:id="@+id/password_reg"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#D9CCCA"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/email_reg"
        app:layout_constraintStart_toStartOf="@+id/email_reg"
        app:layout_constraintTop_toBottomOf="@+id/email_reg" />

    <Button
        android:background="#BB7CAC"
        android:id="@+id/register_reg"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:layout_marginTop="70dp"
        android:text="Register"
        android:textColor="#D9CCCA"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/password_reg"
        app:layout_constraintStart_toStartOf="@+id/password_reg"
        app:layout_constraintTop_toBottomOf="@+id/password_reg" />

    <TextView
        android:background="#BB7CAC"
        android:id="@+id/login_reg"
        android:layout_width="316dp"
        android:layout_height="57dp"
        android:text="Already Have An Account?Login Here"
        android:textColor="#D9CCCA"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/register_reg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_reg"
        app:layout_constraintTop_toBottomOf="@+id/register_reg" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>